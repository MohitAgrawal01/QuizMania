<!-- user-quizzes.ejs -->
<%- include('navbar.ejs') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Your Quizzes</title>
</head>
<body>
  <div class="container">
    
    <!-- <ul class="list-group"> -->
      <div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">
        <div class="max-w-screen-xl mx-auto p-5 sm:p-10 md:p-16">
          <!-- <h1 class="my-4">Your Quizzes</h1> -->
          <div class="grid grid-cols-1 md:grid-cols-3 sm:grid-cols-2 gap-10">
            
      <% quizzes.forEach(quiz => { %>
        
                <div class="rounded overflow-hidden shadow-lg transform scale-100 hover:scale-105 transition-transform ease-in-out">
        
                    <a href="/join?quizId=<%= quiz.quizId %>"></a>
                    <div class="relative">
                        <a href="/join?quizId=<%= quiz.quizId %>">
                          <img class="w-full" src="/images/image<%= Math.floor(Math.random() * 10) + 1 %>.jpg" alt="<%= quiz.title %>" />
                    
                            <div
                                class="hover:bg-transparent transition duration-300 absolute bottom-0 top-0 right-0 left-0 bg-gray-900 opacity-25">
                            </div>
                        </a>
                            <div onclick="playquiz(<%= quiz.quizId %>)" class="absolute bottom-0 left-0 bg-indigo-600 px-10 py-2 text-white text-sm hover:bg-black hover:text-indigo-600 transition duration-500 ease-in-out">
                                Play Quiz
                            </div>
        
                        <a href="">
                            <div
                                class="text-sm absolute top-0 right-0 bg-indigo-600 px-4 text-white rounded-full h-16 w-16 flex flex-col items-center justify-center mt-3 mr-3 hover:bg-black hover:text-indigo-600 transition duration-500 ease-in-out">
                                <span class="font-bold"><%=quiz.numberOfQuestions%></span>
                                <small>Questions</small>
                            </div>
                        </a>
                    </div>
                    <div class="px-6 py-4">
        
                        <a href="" class="font-semibold text-lg inline-block hover:text-indigo-600 transition duration-500 ease-in-out"><%=quiz.quizTopic%></a>
                        <p class="text-gray-500 text-sm">
                          <%= quiz.quizId %>
                        </p>
                    </div>
                    <div class="px-6 py-4 flex flex-row items-center">
                        <span href="#" class="py-1 text-sm font-regular text-gray-900 mr-1 flex flex-row items-center">
                            <svg height="13px" width="13px" version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg"
                                xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 512 512"
                                style="enable-background:new 0 0 512 512;" xml:space="preserve">
                                <g>
                                    <g>
                                        <path d="M256,0C114.837,0,0,114.837,0,256s114.837,256,256,256s256-114.837,256-256S397.163,0,256,0z M277.333,256
              c0,11.797-9.536,21.333-21.333,21.333h-85.333c-11.797,0-21.333-9.536-21.333-21.333s9.536-21.333,21.333-21.333h64v-128
              c0-11.797,9.536-21.333,21.333-21.333s21.333,9.536,21.333,21.333V256z"></path>
                                    </g>
                                </g>
                            </svg>
                            <span class="ml-1"><%= quiz.creationTime %></span></span>
                    </div>
                </div>
                
        <!-- <li class="list-group-item">
          <strong>Quiz ID:</strong> <%= quiz.quizId %><br>
          <strong>Created By:</strong> <%= quiz.createdBy %><br>
          <strong>Creation Time:</strong> <%= quiz.creationTime %><br>
          <strong>Quiz Topic:</strong> <%= quiz.quizTopic %>
        </li> -->
      <% }); %>
    </div>
  </div>
</div>
    <!-- </ul> -->
  </div>

  <script>
    function playquiz(quizid) {

    // Send an API request to validate the join code
    fetch('/validateJoinCode', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ joinCode: quizid }),
    })
    .then(function(response) {
        return response.json();
    })
    .then(function(data) {
        if (data.valid) {
            // Redirect to the quiz page with the retrieved quiz ID
            
          window.location.href = '/joinquiz/' + data.quizId;
        } else {
            alert('Invalid Join Code. Please try again.');
        }
    })
    .catch(function(error) {
        console.error('Error:', error);
    });

  }

  </script>
</body>
</html>
