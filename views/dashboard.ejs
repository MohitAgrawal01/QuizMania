  <script>
    // Fetch authentication status using an API call or your logic
    fetch('/isSessionAuthenticated')
        .then(response => response.json())
        .then(data => {
            const isAuthenticated = data.authenticated;
            

            // Set the display property based on authentication status
            document.getElementById('loginButton').style.display = isAuthenticated ? 'none' : 'block';
            document.getElementById('signupButton').style.display = isAuthenticated ? 'none' : 'block';
            // document.getElementById('userBlock').style.display = isAuthenticated ? 'block' : 'none';
            document.getElementById('userPic').style.display = isAuthenticated ? 'block' : 'none';

        })
        .catch(error => {
            console.error('Error fetching authentication status:', error);
        });
    //fetch User details

    fetch('/profile')
        .then(response => response.json())
        .then(data => {
            const isAuthenticated = data.authenticated;
            const username = data.username;
            const email = data.email;

        // Select the HTML elements by their IDs
            const userNameElement = document.getElementById('userName');
            const userEmailElement = document.getElementById('userEmail');
            

            if (isAuthenticated) {
            // Update the HTML elements with the fetched username and email
                userNameElement.textContent = username;
                userEmailElement.textContent = email;

            // Do something else if needed
                console.log('Authenticated user:', username, 'Email:', email);
            }
          })
          .catch(error => {
              console.error('Error fetching user details:', error);
          });
</script>
    
