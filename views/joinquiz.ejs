<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body{
            background-color: rgba(8,21,55,255);
            color:white;
            font-family: Arial, Helvetica, sans-serif;
        }
        .border{
            border:7px solid;
            border-color: #414864;
        }

    </style>
</head>
<body>
    <div class="container col-md-8 ">
        <!-- Logo in the top center -->
        <div class="container-fluid">
            <div class="d-flex mt-3">
                <div id="questionleft" class="bg-secondary text-white p-2 rounded  me-4">
                    <!-- Content for questionleft div -->
                </div>
                <div id="userscore" class="bg-dark text-white p-2 rounded  me-4">
                    Score: 0
                </div>
            </div>
        </div>
        
        
                <!-- Content for questionleft goes here -->
           

        <div class="text-center mt-2">
            <img src="/logo.jpg" alt="Logo" class="mt-4 " style="max-height: 100px; max-width: 100px; border-radius:50%;" />
        </div>
        
        <!-- Question Div with rounded border -->
        <div class="question  p-3 mt-5 border  rounded-pill">
            <h2 class="mb-3 text-center" id="question"> Question Loading.....</h2>
            </div>
            <div>
            <!-- Options with rounded borders, two options in one row -->
            <div class="options row mt-5 text-center">
                <div class="col-md-6">
                    <div class="option rounded-pill border  p-2 mb-4" onclick="selectRadio('option1')">
                        <div class="form-check">
                            <input class="form-check-input border  mx-1" type="radio" name="answer" value="a" id="option1">
                            <label class="form-check-label" for="option1"> option 1</label>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 ">
                    <div class="option rounded-pill border  p-2 mb-4" onclick="selectRadio('option2')">
                        <div class="form-check">
                            <input class="form-check-input border  mx-1" type="radio" name="answer" value="b" id="option2">
                            <label class="form-check-label" for="option2">option 2</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="options row text-center">
                <div class="col-md-6">
                    <div class="option rounded-pill border  p-2 mb-4" onclick="selectRadio('option3')">
                        <div class="form-check">
                            <input class="form-check-input border  mx-1" type="radio" name="answer" value="c" id="option3">
                            <label class="form-check-label " for="option3">option 3</label>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="option rounded-pill border  p-2 mb-4" onclick="selectRadio('option4')">
                        <div class="form-check">
                            <input class="form-check-input border  mx-1" type="radio" name="answer" value="d" id="option4">
                            <label class="form-check-label" for="option4">option 4</label>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
        <!-- Timer in top corner -->
        <div class="position-absolute top-0 end-0 mt-4 me-4">
            <span id="timer" class="bg-primary text-white p-2 rounded">Timeleft: NAN sec</span>
        </div>
    </div>
        <!-- Submit button in bottom right -->
        <div class="d-flex justify-content-end mb-4 me-4">
            <button class="btn btn-primary" id="nextQuestion">Submit</button>
        </div>
        
        
    <script>
        const quizForm = document.getElementById('quizForm');
        const nextQuestionButton = document.getElementById('nextQuestion');
        const questionText = document.getElementById('question');
        const timerDisplay = document.getElementById('timer');
        let questionTimer;
        
        const quizId = '<%= quizId %>';
        let timeLeft = 10; // Initial time in seconds
    
        function selectRadio(optionId) {
            const radio = document.getElementById(optionId);
            radio.checked = true;
                  // Get the submit button element
        var submitButton = document.getElementById('nextQuestion');

        // Disable or enable the submit button based on whether any option is selected
        submitButton.disabled = !document.querySelector('input[name="answer"]:checked');
        }
        function updateTimerDisplay() {
            timerDisplay.textContent = `Time Left: ${timeLeft} sec`;
        }
    
        function startTimer() {
            updateTimerDisplay();
            questionTimer = setInterval(() => {
                timeLeft--;
                updateTimerDisplay();
                if (timeLeft <= 0) {
                    submitAnswer("none");
                    alert("Oops!! question misssed, attempt next question now...");
                }
            }, 1000); // Update every 1 second
        }
    
        function loadQuestion() {
            clearInterval(questionTimer); // Clear the previous timer
            timeLeft = 10; // Reset the timer
            document.getElementById("nextQuestion").disabled = true;
            // Start a new 10-second timer
            startTimer();
            // to unchck the radio button on next question
            document.getElementById('option1').checked = false;
            document.getElementById('option2').checked = false;
            document.getElementById('option3').checked = false;
            document.getElementById('option4').checked = false;

             // Reset background color for all divs with the class 'option'
    document.querySelectorAll('.option').forEach(function (div) {
        div.style.backgroundColor = '';
    });
    
            fetch(`/getQuestion/${quizId}`, {
                method: 'GET',
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                console.log(data);
                if(data.message=="quiz completed"){
                    window.location = `/${quizId}/leaderboard`;

                    return ;
                }
                var currentQuestion = data.currentQuestion;
                var totalQuestion = data.totalQuestions;


                // Update the content of the divs
                document.getElementById('questionleft').innerHTML = currentQuestion + '/' + totalQuestion;
                

                if (data && data.question) {
                    questionText.textContent = data.question;
    
                    document.getElementById('option1').nextElementSibling.textContent = data.options[0];
                    document.getElementById('option2').nextElementSibling.textContent = data.options[1];
                    document.getElementById('option3').nextElementSibling.textContent = data.options[2];
                    document.getElementById('option4').nextElementSibling.textContent = data.options[3];
                    timeLeft = data.timeleft;
                    console.log(data.timeleft);
                } else {
                    window.location.href = '/home';
                }
            })
            .catch(error => {
                console.error('Error:', error);
            console.log("redirecting to join..")
              //  window.location.href = '/join';
            });
        }
    
         async function submitAnswer(answer) { 
            clearInterval(questionTimer); // Clear the timer when the user submits an answer
            timeLeft = 10; // Reset the timer
    
            try {
                const response = await fetch(`/submitQuestion/${quizId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ answer }),
                });
    
                if (!response.ok) {
                    throw new Error(`HTTP Error: ${response.status}`);
                }
    
                const data = await response.json();

                // Display quiz score
                var quizscore = data.score;

                document.getElementById('userscore').innerHTML = 'Score: ' + quizscore;
                
                console.log(data);
                var radioButton = document.querySelector('input[name="answer"]:checked');
                var divContainer = radioButton.parentNode.parentNode; // Assuming the div is two levels up
            
               
                if(data.lastAnswerCorrect==true){
                    divContainer.style.backgroundColor = '#2ED910';

                }else{
                    divContainer.style.backgroundColor = '#D93010';
                    document.querySelector('input[name="answer"][value="' + (data.correctAnswer) + '"]').parentNode.parentNode.style.backgroundColor="#2ED910";
                    console.log(data.correctAnswer)
                }   
               

                    setTimeout(()=>{
                        if (data.message) {
                        alert(`Quiz finished. Your score: ${data.score}`);
                        window.location = `/${quizId}/leaderboard`;

                    }
                    },1000)
                    
                  
                
            } catch (error) {
                console.error(error);
                // Handle errors, e.g., display an error message to the user
                // You can use alert() or display the error in the UI
            }
    
            setTimeout(loadQuestion,2000);
           // loadQuestion();
        }
    
        nextQuestionButton.addEventListener('click', () => {
            const selectedAnswer = document.querySelector('input[name="answer"]:checked');
            if (selectedAnswer) {
                submitAnswer(selectedAnswer.value);
            } else {
    
                submitAnswer("none"); // Submit "none" if no answer is selected
                
            }
        });
    
        // Load the first question when the page loads
        loadQuestion();
    </script>
</body>
</html>
